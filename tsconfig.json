{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es6"
    },
    "include": [
        "index.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}